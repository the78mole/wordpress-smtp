{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "enabledManagers": ["dockerfile"],
  "dockerfile": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["wordpress"],
      "groupName": "WordPress base image"
    }
  ]
}
